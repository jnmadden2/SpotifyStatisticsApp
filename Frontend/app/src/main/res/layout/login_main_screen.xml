<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"

    android:id="@+id/InitializeSpotifyAuthorization"
    android:background="@android:color/black">

    <Button
        android:id="@+id/LoginScreen_SpotifyAuthorizationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_buttons"
        android:fontFamily="@font/bebas_neue"
        android:text="Begin"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp"
        app:circularflow_radiusInDP="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/LoginScreen_TitleText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="161dp"
        android:fontFamily="@font/bebas_neue"
        android:text="QuickSC"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/LoginScreen_SpotifyAuthorizationButton"
        app:layout_constraintEnd_toEndOf="@id/LoginScreen_SpotifyAuthorizationButton"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@id/LoginScreen_SpotifyAuthorizationButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
